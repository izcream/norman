{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "ES2022",
    "target": "ES2021",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/", "./env.d.ts"],
  "exclude": ["dist", "node_modules"]
}
